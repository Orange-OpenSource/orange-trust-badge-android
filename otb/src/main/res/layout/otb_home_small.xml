<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/otb_light_grey">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/otb_header"/>

        <include
            android:id="@+id/otb_home_data_card"
            layout="@layout/otb_home_data_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/otb_landing_padding_7dp"
            android:layout_marginLeft="@dimen/otb_landing_padding_8dp"
            android:layout_marginRight="@dimen/otb_landing_padding_7dp"
            android:layout_marginStart="@dimen/otb_landing_padding_8dp"
            android:layout_marginTop="@dimen/otb_landing_padding_6dp"/>

        <include
            android:id="@+id/otb_home_usage_card"
            layout="@layout/otb_home_data_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/otb_landing_padding_7dp"
            android:layout_marginLeft="@dimen/otb_landing_padding_8dp"
            android:layout_marginRight="@dimen/otb_landing_padding_7dp"
            android:layout_marginStart="@dimen/otb_landing_padding_8dp" />

        <include
            android:id="@+id/otb_home_terms_card"
            layout="@layout/otb_home_terms_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/otb_landing_padding_8dp"
            android:layout_marginEnd="@dimen/otb_landing_padding_7dp"
            android:layout_marginLeft="@dimen/otb_landing_padding_8dp"
            android:layout_marginRight="@dimen/otb_landing_padding_7dp"
            android:layout_marginStart="@dimen/otb_landing_padding_8dp" />
    </LinearLayout>
</ScrollView>
