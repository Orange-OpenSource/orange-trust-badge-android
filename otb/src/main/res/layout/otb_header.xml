<!--
  Orange Trust Badge library

  Module name: com.orange.essentials:otb
  Version:     1.0
  Created:     2016-03-15 by Aurore Penault, Vincent Boesch, and Giovanni Battista Accetta
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/otb_header_color"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/otb_8dp"
        android:paddingLeft="@dimen/otb_20dp"
        android:paddingRight="@dimen/otb_8dp"
        android:paddingStart="@dimen/otb_20dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/otb_header_tv_appName"
                style="@style/otb_big_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/otb_16dp"
                android:focusable="false"
                android:importantForAccessibility="yes"
                android:paddingEnd="@dimen/otb_48dp"
                android:paddingLeft="0dp"
                android:paddingRight="@dimen/otb_8dp"
                android:paddingStart="0dp"
                tools:text="Orange et moi" />

            <TextView
                android:id="@+id/otb_header_tv_subtitle"
                style="@style/otb_main_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/otb_16dp"
                android:layout_marginTop="@dimen/otb_8dp"
                android:focusable="false"
                android:importantForAccessibility="yes"
                android:paddingEnd="@dimen/otb_48dp"
                android:paddingLeft="0dp"
                android:paddingRight="@dimen/otb_8dp"
                android:paddingStart="0dp"
                android:text="@string/otb_home_header_subtitle" />

        </LinearLayout>

        <ImageView
            android:layout_width="88dp"
            android:layout_height="130dp"
            android:src="@drawable/otb_header_logo" />

    </LinearLayout>

    <TextView
        android:id="@+id/otb_home_subtitle"
        style="@style/otb_main_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/otb_8dp"
        android:paddingLeft="@dimen/otb_16dp"
        android:paddingRight="@dimen/otb_16dp"
        android:paddingTop="@dimen/otb_16dp"
        android:text="@string/otb_home_subtitle" />

</LinearLayout>