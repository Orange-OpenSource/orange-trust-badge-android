<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <!-- Style according OTB requirements -->

    <style name="otb_big_title">
        <item name="android:fontFamily" tools:ignore="NewApi">Roboto-Bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/otb_main_text</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="otb_main_title">
        <item name="android:textColor">@color/otb_main_text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily" tools:ignore="NewApi">Roboto-Bold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="otb_main_subtitle">
        <item name="android:textColor">@color/otb_main_text</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily" tools:ignore="NewApi">Roboto-Bold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="otb_colored_button">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily" tools:ignore="NewApi">Roboto-Bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="otb_body_light">
        <item name="android:textColor">@color/otb_main_text</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily" tools:ignore="NewApi">sans-serif-light</item>
    </style>

    <style name="otb_body">
        <item name="android:textColor">@color/otb_main_text</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="otb_color_switch">
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

    <style name="otb_separator">
        <item name="android:background">@drawable/otb_divider</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:focusable">false</item>
    </style>


</resources>